{
  "name": "ambito-dolar",
  "license": "CC-BY-NC-ND-4.0",
  "repository": "outaTiME/ambito-dolar",
  "author": {
    "name": "outaTiME",
    "email": "afalduto@gmail.com",
    "url": "https://outa.im"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@serverless-stack/cli": "1.2.36",
    "@serverless-stack/resources": "1.2.36",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "aws-cdk-lib": "2.24.0",
    "eslint": "^8.19.0",
    "eslint-config-universe": "^11.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lerna": "^5.1.6",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "test": "lerna run test",
    "g:eslint": "cd $INIT_CWD && eslint .",
    "client:start": "yarn workspace @ambito-dolar/client run start",
    "client:upgrade": "yarn workspace @ambito-dolar/client expo upgrade",
    "client:build": "yarn workspace @ambito-dolar/client exec eas build --clear-cache",
    "api:start": "yarn sst start",
    "api:publish": "yarn sst deploy",
    "api:remove": "yarn sst remove --debug-stack",
    "publish": "lerna version --conventional-commits --conventional-graduate",
    "version": "yarn install && git stage yarn.lock",
    "depcheck": "yarn workspaces foreach --verbose exec npx depcheck"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "packageManager": "yarn@3.2.0"
}
