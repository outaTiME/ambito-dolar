{
  "name": "ambito-dolar",
  "license": "CC-BY-NC-ND-4.0",
  "repository": "outaTiME/ambito-dolar",
  "author": {
    "name": "outaTiME",
    "email": "afalduto@gmail.com",
    "url": "https://outa.im"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@serverless-stack/cli": "1.15.16",
    "@serverless-stack/resources": "1.15.16",
    "aws-cdk-lib": "2.39.1",
    "eslint": "^8.26.0",
    "eslint-config-universe": "^11.1.1",
    "husky": "^8.0.1",
    "lerna": "^6.0.1",
    "prettier": "^2.7.1"
  },
  "scripts": {
    "test": "lerna run test",
    "g:eslint": "cd $INIT_CWD && eslint .",
    "client:start": "yarn workspace @ambito-dolar/client run start",
    "client:upgrade": "yarn workspace @ambito-dolar/client exec expo-cli upgrade",
    "client:prebuild": "yarn workspace @ambito-dolar/client run prebuild",
    "client:build": "yarn workspace @ambito-dolar/client exec eas build --clear-cache",
    "api:start": "yarn sst start",
    "api:publish": "yarn sst deploy",
    "api:remove": "yarn sst remove --debug-stack",
    "website:start": "yarn workspace @ambito-dolar/website run start",
    "publish": "lerna version --conventional-commits --conventional-graduate",
    "version": "yarn install && git stage yarn.lock",
    "depcheck": "yarn workspaces foreach --verbose exec npx depcheck",
    "postinstall": "husky install"
  },
  "packageManager": "yarn@3.2.3",
  "resolutions": {
    "eslint": "^8.6.0"
  }
}
