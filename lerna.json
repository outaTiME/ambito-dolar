{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore: publish",
      "ignoreChanges": ["**/*.md"]
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
