{
  "version": 2,
  "builds": [
    {
      "src": "services/api-*/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/services/api-$1"
    }
  ],
  "env": {
    "FIREBASE_CLIENT_EMAIL": "@firebase-ambito-dolar-client-email",
    "FIREBASE_PRIVATE_KEY": "@firebase-ambito-dolar-private-key",
    "FIREBASE_DATABASE_URL": "@firebase-ambito-dolar-database-url",
    "AWS_CONFIG_JSON": "@aws-ambito-dolar-config-json",
    "SECRET_KEY": "@secret-ambito-dolar-key",
    "TWITTER_CONSUMER_KEY": "@twitter-ambito-dolar-consumer-key",
    "TWITTER_CONSUMER_SECRET": "@twitter-ambito-dolar-consumer-secret",
    "TWITTER_ACCESS_TOKEN_KEY": "@twitter-ambito-dolar-access-token-key",
    "TWITTER_ACCESS_TOKEN_SECRET": "@twitter-ambito-dolar-access-token-secret",
    "TELEGRAM_BOT_TOKEN": "@telegram-ambito-dolar-bot-token",
    "TELEGRAM_CHAT_ID": "@telegram-ambito-dolar-chat-id",
    "IFTTT_KEY": "@ifttt-ambito-dolar-key",
    "IG_USERNAME": "@ig-ambito-dolar-username",
    "IG_PASSWORD": "@ig-ambito-dolar-password",
    "SNS_TOPIC": "@sns-ambito-dolar-topic",
    "RATE_URL": "@rate-ambito-dolar-url",
    "CRYPTO_RATES_URL": "@crypto-rates-ambito-dolar-url",
    "HISTORICAL_RATE_URL": "@historical-rate-ambito-dolar-url",
    "S3_BUCKET": "@s3-ambito-dolar-bucket",
    "RATE_STATS_OBJECT_KEY": "@rate-stats-ambito-dolar-object-key",
    "RATES_LEGACY_OBJECT_KEY": "@rates-legacy-ambito-dolar-object-key",
    "RATES_V5_OBJECT_KEY": "@rates-v5-ambito-dolar-object-key",
    "RATES_OBJECT_KEY": "@rates-ambito-dolar-object-key",
    "SOCIAL_SCREENSHOT_URL": "@social-screenshot-ambito-dolar-url",
    "IMGUR_CLIENT_ID": "@imgur-ambito-dolar-client-id",
    "IMGBB_KEY": "@imgbb-ambito-dolar-key"
  }
}
